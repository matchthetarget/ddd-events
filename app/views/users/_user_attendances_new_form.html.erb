<%= form_with(model: @attendance, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :attending %>

    <%= f.select :attending, options_for_select(Attendance.attendings.keys), {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :event_id %>

    <%= f.collection_select :event_id, Event.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create attendance", class: "btn btn-block btn-outline-secondary" %>
<% end %>
