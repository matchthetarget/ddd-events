<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Attendances

    <a data-toggle="collapse" href="#user_attendances_new_form">
      Add attendance
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.attendances.each do |attendance| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to attendance, attendance %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_attendances_new_form">
        <%= render partial: "users/user_attendances_new_form" %>
      </div>
    </div>

  </ul>
</div>
