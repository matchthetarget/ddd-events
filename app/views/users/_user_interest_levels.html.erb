<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Interest Levels

    <a data-toggle="collapse" href="#user_interest_levels_new_form">
      Add interest level
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.interest_levels.each do |interest_level| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to interest_level, interest_level %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_interest_levels_new_form">
        <%= render partial: "users/user_interest_levels_new_form" %>
      </div>
    </div>

  </ul>
</div>
