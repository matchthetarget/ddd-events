<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Interest Levels

    <a data-toggle="collapse" href="#event_interest_levels_new_form">
      Add interest level
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.interest_levels.each do |interest_level| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to interest_level, interest_level %>

        <%= link_to interest_level, method: :delete, data: { confirm: "Do you really want to delete this interest_level" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_interest_levels_new_form">
        <%= render partial: "events/event_interest_levels_new_form" %>
      </div>
    </div>

  </ul>
</div>
