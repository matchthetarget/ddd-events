<!-- Form attendance start -->
<%= form_with(model: @attendance, local: true) do |f| %>
<!-- Form attendance end -->

  <!-- Label and input for attending start -->
  <div class="form-group">
    <%= f.label :attending %>

    <!-- Input for attending start -->
    <%= f.text_field :attending, class: "form-control" %>
    <!-- Input for attending end -->
  </div>
  <!-- Label and input for attending end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <%= f.label :user_id %>

    <!-- Input for user_id start -->
    <%= f.text_field :user_id, class: "form-control" %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for event_id start -->
  <!-- Input for event_id start -->
  <%= f.hidden_field :event_id, value: @event.id %>
  <!-- Input for event_id end -->
  <!-- Label and input for event_id end -->

  <%= f.submit "Create attendance", class: "btn btn-block btn-outline-secondary" %>
<% end %>
