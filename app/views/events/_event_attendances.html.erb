<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Attendances

    <a data-toggle="collapse" href="#event_attendances_new_form">
      Add attendance
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.attendances.each do |attendance| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to attendance, attendance %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to attendance, method: :delete, data: { confirm: "Do you really want to delete this attendance" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_attendances_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
