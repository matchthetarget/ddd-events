<% was_validated = event.errors.any? %>

<%= form_with(model: event, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = event.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% event.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% starts_at_class = "form-control" %>
    <% starts_at_was_invalid = event.errors.include?(:starts_at) %>

    <% if was_validated %>
      <% if starts_at_was_invalid %>
        <% starts_at_class << " is-invalid" %>
      <% else %>
        <% starts_at_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :starts_at %>
    <%= f.datetime_select :starts_at, class: starts_at_class, placeholder: "Enter starts at" %>
    <% if starts_at_was_invalid %>
      <% event.errors.full_messages_for(:starts_at).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% ends_at_class = "form-control" %>
    <% ends_at_was_invalid = event.errors.include?(:ends_at) %>

    <% if was_validated %>
      <% if ends_at_was_invalid %>
        <% ends_at_class << " is-invalid" %>
      <% else %>
        <% ends_at_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :ends_at %>
    <%= f.datetime_select :ends_at, class: ends_at_class, placeholder: "Enter ends at" %>
    <% if ends_at_was_invalid %>
      <% event.errors.full_messages_for(:ends_at).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
